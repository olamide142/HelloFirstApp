<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
 x:Class="HelloFirstApp.MainPage">
    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="I'm Awesome :)" HorizontalTextAlignment="Center"
TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Your first simple App, HelloWorld" FontSize="Title"
Padding="30,10,30,10"/>   
    
        <Label Text="The first commit!" FontSize ="16" TextColor="red"
Padding="30,0,30,0"/>
        <Label Text="Make changes to your XAML file and save to see your UI update in the
running app with XAML Hot Reload. Give it a try!" FontSize="16" TextColor ="blue"
Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0">
            <Label.FormattedText>
                <FormattedString>
                    <FormattedString.Spans>
                        <Span Text="Learn more at "/>
                        <Span Text="Our first app" FontAttributes="Bold"
TextColor="Black"/>
                    </FormattedString.Spans>
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </StackLayout>
</ContentPage>
